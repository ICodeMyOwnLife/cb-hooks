{
  "git": {
    "commitMessage": "chore(release): release ${version}"
  },
  "github": {
    "release": true,
    "skipChecks": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}

{
  "name": "cb-hooks",
  "version": "2.5.2",
  "description": "Common reusable React hooks",
  "author": "Hien CB",
  "repository": "https://github.com/ICodeMyOwnLife/cb-hooks.git",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.es.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c rollup/rollup.config.js",
    "build:config": "tsc -p rollup",
    "commit": "git-cz",
    "dev": "rollup -w -c rollup/rollup.config.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "prebuild": "del dist",
    "prepublishOnly": "yarn build",
    "release": "release-it --ci",
    "size": "size-limit",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "cb-toolset": "^0.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@release-it/conventional-changelog": "^1.1.4",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@size-limit/preset-big-lib": "^4.5.0",
    "@types/history": "^4.7.6",
    "@types/react": "^16.9.36",
    "@types/react-router": "^5.1.7",
    "cb-rollup-plugin-filesize": "^9.0.0-5",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.2.0",
    "eslint-config-react-ts": "^2.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "release-it": "^13.6.3",
    "rollup": "^2.16.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-typescript2": "^0.27.1",
    "size-limit": "^4.5.0",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "react": "^16.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn type-check && yarn lint-staged && yarn size"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:fix"
    ],
    "{*.{json,md}}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
